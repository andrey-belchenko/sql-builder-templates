<root>
  <queries>
    <query name="kr_payer">
      <params>
        <param name="date">
          <const>sysdate</const>
        </param>
      </params>
      <select>
        <column table="a" column="kodp" type="number">
        </column>
        <column table="a" column="nump" type="string" title="Код абонента">
        </column>
        <column table="a" column="inn" type="string" title="ИНН">
        </column>
        <column table="a" column="kpp" type="string" title="КПП">
        </column>
        <column table="a" column="name" type="string" title="Наименование абонента">
        </column>
        <column table="dog" column="dolg">
        </column>
      </select>
      <from>
        <table name="kr_payer" as="a">
        </table>
        <query name="kr_payer.kr_dogovor" as="dog" join="left outer">
          <withparams>
            <useparam name="date" />
          </withparams>
          <call function="=">
            <column table="a" column="kodp"/>
            <column table="dog" column="kodp"/>
          </call>
        </query>
      </from>
    </query>
  </queries>
</root>