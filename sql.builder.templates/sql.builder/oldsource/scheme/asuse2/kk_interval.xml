<root>
  <queries>
    <query name="kk_interval">
      <select>
        <column table="a" column="kodinterval" type="number">
        </column>
        <column table="a" column="name" type="string" title="Зона суток">
        </column>
        <column table="a" column="abbr" type="string" title="Зона суток">
        </column>
        <call function="case" as="zone" type="number">
          <call function="when">
            <!--ночь-->
            <call function="in">
              <column table="a" column="kodinterval">
              </column>
              <call function="array">
                <const>23</const>
                <const>-23</const>
                <const>-25</const>
              </call>
            </call>
            <const>1</const>
          </call>
          <call function="when">
            <!--пик-->
            <call function="in">
              <column table="a" column="kodinterval">
              </column>
              <call function="array">
                <const>21</const>
                <const>27</const>
                <const>211</const>
                <const>212</const>
              </call>
            </call>
            <const>2</const>
          </call>
          <call function="when">
            <!--день(полупик)-->
            <call function="in">
              <column table="a" column="kodinterval">
              </column>
              <call function="array">
                <const>-24</const>
                <const>22</const>
                <const>26</const>
                <const>28</const>
              </call>
            </call>
            <const>3</const>
          </call>
          <call function="else">
            <const>0</const>
          </call>
        </call>
      </select>
      <from>
        <table name="kk_interval" as="a">
        </table>
      </from>
    </query>
