<?xml version="1.0" encoding="utf-8"?>
<root>
  <queries>
    <query name="kk_sulst">
      <select>
        <column table="a" column="kod_sulst" type="number" column-mandatory="1" comment="Ун.код в справочнике" />
        <column table="a" column="sulst" type="string" data-size="10" title="" comment="Код по спр-ку СЮЛСТ/СИПСТ, СЮЛПД" />
        <column table="a" column="type_sulst" type="string" data-size="20" column-mandatory="1" title="" comment="тип спр-ка (СЮЛСТ/СИПСТ, СЮЛПД)" />
        <column table="a" column="name_sulst" type="string" data-size="200" column-mandatory="1" title="" comment="наименование состояния контрагента(статус)" />
        <column table="a" column="pr_active" type="number" column-mandatory="1" title="" comment="признак актуальности использования в отчете: 0 или 1" />
        <column table="a" column="u_m" type="string" data-size="20" title="" comment="кто последний корректировал" />
        <column table="a" column="d_m" type="date" title="" comment="когда последний корректировал" />
        <column table="a" column="shortname" type="string" data-size="200" title="" comment="Краткое наименование" />
        <column table="a" column="cat_a" type="number" title="" comment="Категория отчёта A" />
        <column table="a" column="cat_b" type="number" title="" comment="Категория отчёта B" />
        <column table="a" column="cat_c" type="number" title="" comment="Категория отчёта C" />
        <column table="a" column="d_c" type="date" title="" comment="когда создана запись" />
        <column table="a" column="prim" type="string" data-size="500" title="" comment="Комментарий" />
      </select>
      <from>
        <table name="kk_sulst" as="a" />
      </from>
    </query>
  </queries>
</root>